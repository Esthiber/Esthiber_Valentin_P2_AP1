@page "/model"
@rendermode InteractiveServer

<PageTitle>Modelo</PageTitle>

<div class="container">
    <div class="card shadow-lg">
        <div class="card-header space-between">
            <h5 class="card-title text-center">Modelo</h5>
            <a href="/model/create" class="btn btn-primary"> <span class="bi bi-plus-square bi-trask mt-3"></span> Crear</a>
        </div>

        <div class="card-body">
            @*labels*@
            <div class="row">

                @*Filtrar por*@
                <div class="col-3">
                    <label class="col-form-label"><strong>Filtrar por</strong></label>
                </div>

                @*ValorFiltro*@
                <div class="col-4">
                    <label class="col-form-label"><strong>B&uacute;squeda</strong></label>
                </div>
            </div>

            @*Inputs y botones*@
            <div class="row align-items-center">
                @*filtro*@
                <div class="col-3">
                    <InputSelect class="form-select" @bind-Value="Filtro">
                        <option value="" selected disabled>Elija una opci&oacute;n</option>
                        <option value="Id">Id</option>
                    </InputSelect>
                </div>
            </div>
            <div class="col-4">
                <div class="input-group">
                    <input class="form-control" @bind="ValorFiltro" placeholder="Buscar" />
                    <button type="button" class="btn btn-outline-primary bi bi-search" @onclick="Buscar"> Search</button>
                </div>
            </div>

            <table class="table table-striped table-hover">
                <thead class="table text-black">
                    <tr>

                        <th>Id</th>
                        <th colspan="2" class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var i in new List<int>())
                    {
                        <tr>
                            @*Detalle*@
                            <td> @i</td>


                            @*BTN Editar*@
                            <td class="text-center">
                                <a href="/modelo/edit/" class="btn btn-outline-primary bi bi-pencil-square"></a>
                            </td>

                            @*BTN Eliminar*@
                            <td class="text-center">
                                <button class="btn btn-outline-danger bi bi-trash" @onclick="() => {}"></button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

       <div class="card-footer">
           <label>Count: 0</label>
       </div>
    </div>
</div>

@code {
    public string Filtro { get; set; }
    public string ValorFiltro { get; set; }

    void Buscar()
    {

    }
}
